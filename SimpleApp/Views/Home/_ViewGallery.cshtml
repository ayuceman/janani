@model PaginatedList<ImageDetailsViewModel>

<link rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/@@fancyapps/ui@5.0/dist/fancybox/fancybox.css" />

<div class="container">
    Test
    <div class="row">
        @foreach (var item in Model.Items)
        {
            <a href="@item.ImagePath" data-fancybox="gallery" data-caption="@item.ImageCategory" class="col-lg-3 col-md-4 col-sm-6 mb-4">
                    <div class="card">
                        <img class="card-img-top" src="@item.ImagePath" alt="@item.AlternativeText">
                        <div class="card-body">
                            <h5 class="card-title">@item.ImageCategory</h5>
                            <p class="card-text">Date: @item.UploadDate.ToShortDateString()</p>
                        </div>
                    </div>
            </a>
        }
    </div>

    <div class="pagination" style="margin-bottom: 20px; text-align: right;">
        @if (Model.HasPreviousPage)
        {
            @Html.ActionLink(
                     "Previous",
                     "Index",
                     new { page = Model.PageIndex - 1 },
                     new { @class = "btn btn-primary", style = "margin: 5px;" }
                     )

        }
        @if (Model.HasNextPage)
        {
            @Html.ActionLink(
                     "Next",
                     "Index",
                     new { page = Model.PageIndex + 1 },
                     new { @class = "btn btn-primary", style = "margin: 5px;" }
                     )

        }
    </div>
</div>


<script src="https://cdn.jsdelivr.net/npm/@@fancyapps/ui@5.0/dist/fancybox/fancybox.umd.js"></script>

<script>
    Fancybox.bind("[data-fancybox='gallery']", {
        // Your custom options
    });
</script>